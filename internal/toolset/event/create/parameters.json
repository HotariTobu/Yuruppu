{
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Event title",
      "minLength": 1,
      "maxLength": 100
    },
    "start_time": {
      "type": "string",
      "description": "Event start time in RFC3339 format (must be in the future)",
      "format": "date-time"
    },
    "end_time": {
      "type": "string",
      "description": "Event end time in RFC3339 format (must be after start_time)",
      "format": "date-time"
    },
    "capacity": {
      "type": "integer",
      "description": "Maximum number of participants",
      "minimum": 1
    },
    "fee": {
      "type": "string",
      "description": "Participation fee (e.g., '500 yen', 'free')"
    },
    "description": {
      "type": "string",
      "description": "Event description (can be multiline)"
    },
    "show_creator": {
      "type": "boolean",
      "description": "Whether to show the creator's information publicly"
    }
  },
  "required": ["title", "start_time", "end_time", "capacity", "fee", "description", "show_creator"],
  "additionalProperties": false
}
